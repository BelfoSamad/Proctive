<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Proctive" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primaryColor</item>
        <item name="colorSecondaryVariant">@color/primaryColor</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="SimpleImageButtonStyle">
        <item name="android:background">@null</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="ImageButtonStyle">
        <item name="android:background">@drawable/button_background</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/white</item>
    </style>
    <style name="WhiteImageButtonStyle">
        <item name="android:background">@drawable/white_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="PrimaryImageButtonStyle">
        <item name="android:background">@drawable/primary_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="SuccessImageButtonStyle">
        <item name="android:background">@drawable/success_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="ErrorImageButtonStyle">
        <item name="android:background">@drawable/error_button_background</item>
        <item name="android:padding">12dp</item>
        <item name="tint">@color/black</item>
    </style>
    <style name="TextTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">40sp</item>
    </style>
    <style name="TextSubTitleStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">24sp</item>
    </style>
    <style name="PrimaryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">20sp</item>
    </style>
    <style name="SecondaryTextStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_medium</item>
        <item name="android:textSize">16sp</item>
    </style>
    <style name="ChipStatusStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">12sp</item>
    </style>
    <style name="LabelStyle">
        <item name="android:textColor">@color/black</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">16sp</item>
        <item name="android:drawablePadding">8dp</item>
    </style>
    <style name="BigButtonStyle">
        <item name="chipEndPadding">16dp</item>
        <item name="chipStartPadding">16dp</item>
        <item name="chipMinHeight">96dp</item>
        <item name="chipMinTouchTargetSize">96dp</item>
        <item name="chipIconSize">48dp</item>
    </style>
    <style name="ButtonStyle">
        <item name="cornerRadius">12dp</item>
        <item name="iconTint">@color/white</item>
        <item name="backgroundTint">@color/black</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/barlow_bold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textAllCaps">false</item>
    </style>
</resources>